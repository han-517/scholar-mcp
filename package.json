{
  "name": "scholar-mcp",
  "version": "2.0.0",
  "description": "MCP tool for interacting with Cool Papers (search, download, Kimi summaries)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "setup": "./setup.sh",
    "server": "node dist/index.js",
    "lint": "echo 'Linting...' && npm run build",
    "clean": "rm -rf dist/",
    "test:cool": "npm run build && tsx scripts/cool-papers-smoke.ts"
  },
  "keywords": [
    "mcp",
    "arxiv",
    "dblp",
    "academic",
    "research"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@magneticwatermelon/mcp-toolkit": "^2.0.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0",
    "mcp-starter": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
